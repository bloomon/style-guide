{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "organizeImports": {
    "enabled": true,
    "include": ["src/"]
  },
  "linter": {
    "enabled": true,
    "include": ["src/"],
    "rules": {
      "recommended": true,
      "a11y": {
	"recommended": true,
	"useKeyWithClickEvents": "off",
	"noBlankTarget": "off"
      },
      "correctness": {
	"recommended": true,
	"noUnusedVariables": "error"
      },
      "suspicious": {
	"recommended": true,
	"noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
	"recommended": true,
	"noArguments": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "include": ["src/"],
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 88
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "semicolons": "always",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "arrowParentheses": "always"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
